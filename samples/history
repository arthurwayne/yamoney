#! /usr/bin/env coffee

# Required modules

FS = require('fs')
YaMoney = require('..')

# Check provided CLI args

if process.argv.length < 3
	programName = process.argv[1].match(/[^/]+$/)[0]

	console.log('Displays operation history')
	console.log('Usage: ' + programName + ' TOKEN_PATH [PARAM1=VALUE1]...')

	process.exit()

# Process CLI args

tokenPath = process.argv[2]
token = JSON.parse(FS.readFileSync(tokenPath, encoding: 'utf-8')).access_token

selector = Object.create(null)

for pair in process.argv.slice(3)
	[key, value] = pair.split('=')
	selector[key] = value

# Create client and set access token

client = new YaMoney.Client(host: 'money.yandex.ru', port: 443, charset: 'utf-8')
client.setToken(token)

# And invoke necessary methods

client.operationHistory(selector, (error, details) ->
	unless error? then console.log(details) else console.log(error)

	undefined
)
